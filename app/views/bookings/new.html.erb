<h1>Book: <%= @cooking_tutorial.title %></h1>

<%= form_with model: [@cooking_tutorial, @booking], local: true do |form| %>
  <div>
    <%= form.label :confirmed, "Confirmed?" %>
    <%= form.check_box :confirmed %>
  </div>

  <div>
    <%= form.submit "Book Now" %>
  </div>
<% end %>
