<div class="container mt-5" style="max-width: 600px;">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title mb-3">Booking Details</h3>
      <p><strong>Class:</strong> <%= @booking.cooking_tutorial.title %></p>
      <p><strong>Date:</strong> <%= @booking.cooking_tutorial.date.strftime("%B %d, %Y") %></p>
      <p><strong>Confirmed:</strong> <%= @booking.confirmed ? "Yes" : "No" %></p>
      <%= link_to "Back to My Bookings", bookings_path, class: "btn btn-outline-secondary mt-3" %>
    </div>
  </div>
</div>
